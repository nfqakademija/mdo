{% extends "base.html.twig" %}
{% set data = [{'reservedAt':{'Y':2018,'m':10,'d':18},'from':'12:00','to':'13:00','type':'Adults','hash':"gfsg525g4"},{'reservedAt':{'Y':2018,'m':9,'d':12},'from':'13:00','to':'15:00','type':'Kids','hash':"gfsg525g4"},{'reservedAt':{'Y':2018,'m':11,'d':25},'from':'16:00','to':'17:00','type':'Kids','hash':"gfsg525g4"}] %}
{% block view %}
    {% include "partials/modal.html.twig" %}
    <div class="container">
        <div id="calendar"></div>
    </div>
{% endblock %}
{% block scripts %}
    <script>
        const dates = [];
        {% for time in data %}
            dates.push({
                date: new Date({{ time.reservedAt.Y }}, {{ time.reservedAt.m }}, {{ time.reservedAt.d }}),
                type: "{{ time.type }}",
                from: "{{ time.from }}",
                to: "{{ time.to }}",
                hash: "{{ time.hash }}",
                repeatFor: 1,
                old: true
            });
        {% endfor %}
    </script>

    <script src="{{ asset("build/js/times.js") }}"> </script>
{% endblock %}
{% block styles %}
    <link rel="stylesheet" href="{{ asset("build/css/add-time.css") }}">
{% endblock %}

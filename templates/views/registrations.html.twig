{% extends "base.html.twig" %}
{% block view %}
        <div class="TableContainer">
            <table id="table_id" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Email Adress</th>
                    <th>Mobile Phone</th>
                    <th>Message</th>
                    <th>Registeration Date</th>
                    <th>Session Date</th>
                    <th>Time</th>
                    <th> </th>
                </tr>
                </thead>
                <tbody>
                {% for registration in registrations %}
                    <tr id="registration-{{ registration.getId() }}">
                        <td>{{ loop.index }}</td>
                        <td>{{ registration.getCustomer().getFullName() }}</td>
                        <td>{{ registration.getCustomer().getEmail() }}</td>
                        <td>{{ registration.getCustomer().getPhone() }}</td>
                        <td><span class = "Comment"> {{ registration.getCustomer().getComment() }} </span></td>
                        <td>{{ registration.getCustomer().getRegisteredAt|date('Y-m-d') }}</td>
                        <td>{{ registration.getReservedAt()|date('Y-m-d') }}</td>
                        <td> {{ registration.getStartsAt() }} - {{ registration.getEndsAt() }}</td>
                        <td class="CancelButton">
                            <i class="fas fa-ban"></i>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
{% endblock %}
{% block scripts %}
    <script src="{{ asset('build/js/registrations.js') }}"></script>
{% endblock %}
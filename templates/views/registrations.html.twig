{% extends "base.html.twig" %}
{% block view %}
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <canvas class="RegistrationChart chartjs-render-monitor" height="100px"></canvas>
            <table id="table_id" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Email Adress</th>
                    <th>Mobile Phone</th>
                    <th>Message</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th> </th>
                </tr>
                </thead>
                <tbody>
                {% for registration in registrations %}
                    <tr id="registration-{{ registration.getId() }}">
                        <td>{{ loop.index }}</td>
                        <td>{{ registration.getCustomer().getFullName() }}</td>
                        <td>{{ registration.getCustomer().getEmail() }}</td>
                        <td>{{ registration.getCustomer().getPhone() }}</td>
                        <td> {{ registration.getCustomer().getComment() }} </td>
                        <td>{{ registration.getCustomer().getRegisteredAt|date('Y-m-d') }}</td>
                        <td> {{ registration.getStartsAt() }} - {{ registration.getEndsAt() }}</td>
                        <td class="CancelButton">
                            <i class="fas fa-ban"></i>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col1"></div>
    </div>
{% endblock %}
{% block scripts %}
    <script src="{{ asset('build/js/registrations.js') }}"></script>
{% endblock %}